extends ../application

block content
  .container
    .card.card-block
      .row
        .col-md-4.hidden-md-down
        .col-xs-12.col-md-8
          h2= message.title
          h5= message.body
          .row
            .col-xs-3
              form(action="/messages/" + message.id method="POST")
                input(type='hidden', name='_method', value='DELETE')
                button(type="submit" class="btn btn-danger btn-block" data-message=message.id) DELETE