extends ../application.pug

block content
    .container
        h1 Bulletin board
        hr
        each message in messages
            .card.card-block
                .row
                    .col-md-4.hidden-md-down
                    .col-xs-12.col-md-8
                        a(href="/messages/" + message.id)
                            h2= message.title
                        h6= "post number: " + message.id
                        p=message.body
                        .row
                            .col-xs-3
                                a.btn.btn-warning(href='/messages/' + message.id +'/edit') Edit Post
                            .col-xs-6.text-xs-right
                                form(action="/messages/" + message.id method="POST")
                                    input(type='hidden', name='_method', value='DELETE')
                                    button(type="submit" class="btn btn-danger btn-block" data-message=message.id) DELETE